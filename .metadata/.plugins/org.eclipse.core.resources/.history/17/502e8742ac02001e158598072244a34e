package boundary;

import java.sql.Connection;
import java.sql.DriverManager;
import java.sql.PreparedStatement;
import java.sql.ResultSet;
import java.sql.SQLException;
import java.sql.Statement;
public class AccessDB {
	
	Connection con = null;
	Statement stmt = null;

	public AccessDB() {
		// TODO Auto-generated method stub
		String databaseURL = "jdbc:ucanaccess://Database1.accdb";

		
		try {
			con = DriverManager.getConnection(databaseURL);
			stmt = con.createStatement();
			
			System.out.print("Connect");
		}	catch(SQLException e) {
			e.printStackTrace();
			System.out.print("UnConnect");
		}
		
	}
	
	public boolean logincheck(String _p) {
		boolean flag = false;
		
		String pw = _p;
		
		try {
			String checkingStr = "SELECT UserNumber FROM UserInfo123 WHERE UserNumber = '" + pw + "'";
			ResultSet result = stmt.executeQuery(checkingStr);
			System.out.println(checkingStr);
			int count = 0;
			while(result.next()) {
				if(pw.equals(checkingStr.substring(7, 11))) {
					flag = true;
					System.out.println("로그인 성공");
				}
				
				else {
					flag = false;
					System.out.println("로그인 실패");
				}
				count++;
			}
		} catch(Exception e) {
			flag = false;
			System.out.println("로그인 실패 > " + e.toString());
		}
		
		return flag;
	}
	
	/* 회원가입 메소드 */
	public boolean joinCheck(String _i, String _p, String _n, String _e) {
		boolean flag = false;
		
		String name = _i;
		String sex = _p;
		String age = _n;
		String phone = _e;
		
		try {
			String insertStr = "INSERT INTO UserInfo123 (UserName, UserSex, UserAge, UserNumber) VALUES (?, ?, ?, ?)";
			
			PreparedStatement pstmt = con.prepareStatement(insertStr);
			pstmt.setString(1, name);
			pstmt.setString(2, sex);
			pstmt.setString(3, age);
			pstmt.setString(4, phone);
			pstmt.executeUpdate();
				
			flag = true;
			System.out.println("회원가입 성공");
		} catch(Exception e) {
			flag = false;
			System.out.println("회원가입 실패 > " + e.toString());
		}
			
		return flag;
	}
	
	public void dbclose()
	{
	
		try {
			con.close();
			stmt.close();
			
		} catch(Exception e) {
			System.out.println("실패 > " + e.toString());
		}
			
	}

}
